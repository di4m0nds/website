--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />

		<meta name="description" content="Welcome to Javier's posts! I hope you enjoy it.">

		<meta name="keywords" content="posts, publicaciones, posters, personal posts">
		<meta name="author" content="@di4m0nds - Javier Silvestri">

		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<meta property="og:title" content="Javier's Posts">
		<meta property="og:description" content="Welcome to Javier's posts! I hope you enjoy it.">
		<meta property="og:image" content="/portfolio.png">
		<meta property="og:type" content="website">

		<meta name="twitter:site" content="@javslvt" />
		<meta name="twitter:card" content="summary_large_image">

		<meta name="robots" content="index, follow">

		<link rel="stylesheet" type="text/css" href="/styles/main.css" />

		<title>{title}</title>
	</head>
	<body id="home">
		<slot />
	</body>
</html>

<style is:global>
	@font-face {
	  font-family: 'Quicksand';
	  font-style: normal;
	  font-weight: 100;
	  src: url('../assets/fonts/Quicksand-Light.ttf') format('truetype');
	}

	@font-face {
	  font-family: 'Quicksand';
	  font-style: normal;
	  font-weight: 300;
	  src: url('../assets/fonts/Quicksand-Medium.ttf') format('truetype');
	}

	@font-face {
	  font-family: 'Quicksand';
	  font-style: normal;
	  font-weight: 400;
	  src: url('../assets/fonts/Quicksand-Regular.ttf') format('truetype');
	}

	@font-face {
	  font-family: 'Quicksand';
	  font-style: normal;
	  font-weight: 500;
	  src: url('../assets/fonts/Quicksand-SemiBold.ttf') format('truetype');
	}

	@font-face {
	  font-family: 'Quicksand';
	  font-style: normal;
	  font-weight: 700;
	  src: url('../assets/fonts/Quicksand-Bold.ttf') format('truetype');
	}
</style>