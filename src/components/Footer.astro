---
import {
  Github,
  Linkedin,
  Twitter,
  Mail,
  Blog,
} from "./svg";

const classProps = "w-8 h-8 hover:text-orange-500 group-hover:text-orange-500 duration-300 hover:rotate-2"
---
<div class="container mx-auto text-center flex flex-col justify-center items-center">
  <h1 class="text-2xl font-bold"><a href="/">Javi's Portfolio</a></h1>
  <a
    href="/posts"
    aria-label="Go to my posts"
    title="Go to my posts"
    role="button"
    class="flex gap-x-2 items-center my-5 group"
  >
    <Blog classProps={classProps} /><span class="group-hover:text-orange-500 duration-300">Visit my posts</span>
  </a>
  <img class="my-5 w-20 h-20 hover:scale-110 duration-300" src="/favicon.svg" alt="icon">
  <p class="mt-4">I hope you enjoy it.</p>
  <div class="my-8">
    <h2 class="text-2xl font-bold">Contact</h2>
    <div class="w-full flex-col justify-center items-center">
      <ul class="flex gap-x-4 my-4">
        <li>
          <a
            href="mailto:ws.2000.sja@gmail.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Send me a message via Mail"
          >
            <Mail classProps={classProps} />
          </a>
        </li>
        <li>
          <a
            href="https://twitter.com/javslvt"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Read more about Twitter/X"
          >
            <Twitter classProps={classProps} />
          </a>
        </li>
        <li>
          <a
            href="https://github.com/di4m0nds"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Read more about Github"
          >
            <Github classProps={classProps} />
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/silvestrijavier/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Read more about LinkedIn"
          >
            <Linkedin classProps={classProps} />
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="text-center pb-[30px]">
  <p class="text-gray-800">&copy; {new Date().getFullYear()} Javi.</p>
</div>
