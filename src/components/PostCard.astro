---
import { NumberSign } from './svg'

interface Props {
  slug: string
  title: string
  description: string
  tags: string[]
  pubDate: Date
}

const {
  slug,
  title,
  description,
  tags,
  pubDate,
} = Astro.props
---

<a href={`posts/${slug}`} target="_blank" rel="noopener noreferrer" >
  <div class="relative p-5 rounded-md border-2 hover:border-orange-500 border-transparent dark:bg-slate-600/30 bg-orange-300/30 hover:bg-orange-100/20">
    <h1 class="text-xl font-medium">{title}</h1>
    <p class="my-2">{description.length > 100 ? description.substring(0, 99) + " ..." : description}</p>
    <div class="flex flex-wrap gap-2 my-2">
      {
        tags.map(tag => (
          <span class="px-3 py-1 bg-orange-500/60 text-white font-medium rounded-full">{tag}</span>
        ))
      }
    </div>
    <p class="text-sm font-regular dark:text-gray-200 text-gray-600">
      Date: {(pubDate.getMonth() + 1).toString()}/{pubDate.getFullYear().toString()}
    </p>
    <div class="absolute bottom-2 right-2">
      <NumberSign classProps="w-8 h-8 text-orange-500 dark:text-gray-400" />
    </div>
  </div>
</a>