---
import { ExperienceInfo } from "../utils/content";
import PressLetter from "./PressLetter.astro";

const { title, experiences } = ExperienceInfo
---
<section id="experiences" class="section__info bg-orange-500/80 px-8 md:px-16 py-8 md:py-16 text-white opacity-0 duration-300">
  <h2 class="font-regular text-4xl md:text-6xl mb-8 flex items-end">Work Experience<PressLetter letter="3" /></h2>
  {experiences.map(({role, date, company, type, location, description}) => (
    <div class="flex flex-col space-y-6">
      <div class="flex justify-between font-regular">
        <div class="font-medium text-xl">{role}</div>
        <div class="text-lg">{date}</div>
      </div>
      <div class="text-lg">{company} · {type} · {location}</div>
      <p class="text-xl">
        {description}
      </p>
    </div>
  ))}
</section>