---
import { Github, Linkedin, Twitter, Mail, Pdf } from './svg'

import { AboutInfo } from '../utils/content'
import PressLetter from './PressLetter.astro'

const { title, primary_content, secondary_content } = AboutInfo
const classProps = 'w-6 h-6 hover:text-orange-500 duration-300 hover:rotate-2'
---

<section
  id='aboutme'
  class={`section__info tall:pt-0 md:pt-44 opacity-0 duration-300`}
>
  <h1
    class='font-regular flex items-end pl-8 font-sans text-4xl md:pl-16 md:text-6xl'
  >
    {title}<PressLetter letter='2' />
  </h1>
  <main
    class='flex flex-col items-center py-0 pb-8 md:flex-row md:justify-center md:gap-x-10 md:py-12'
  >
    <!-- <div class="bg-orange-500 p-[2px] rounded-full shadow-xl my-5 md-my-0 hover:scale-110 hover:rotate-3 hover:shadow-2xl duration-200">
    </div> -->
    <div
      id='about-main-image'
      class='my-4 h-32 w-32 rounded-full md:my-0 md:h-56 md:w-56'
    >
      <img
        id='about-main-image'
        src='metoo.jpeg'
        alt='Profile Image'
        class='block rounded-full duration-200 hover:rotate-3 hover:scale-110 hover:shadow-2xl lg:hidden'
      />
    </div>
    <div class='mx-8 max-w-md py-4 md:mx-0 md:pb-20 md:pt-16'>
      <p class='mb-2 text-xl text-gray-800 dark:text-gray-200'>
        {primary_content}
      </p>
      <p class='font-regular text-gray-800/60 dark:text-gray-200/60'>
        {secondary_content}
      </p>
      <div class='my-5 flex w-full flex-col items-start md:gap-x-2'>
        <strong class='dark:text-orange-500'>Download CVs:</strong>
        <ul class='mt-1 flex w-full items-center gap-x-10'>
          <li>
            <a
              class='flex items-center'
              href='/curriculum/en.pdf'
              target='_blank'
              rel='noopener noreferrer'
              >English: <Pdf classProps={`${classProps} w-8 h-8 ml-2`} /></a
            >
          </li>
          <li>
            <a
              class='flex items-center'
              href='/curriculum/es.pdf'
              target='_blank'
              rel='noopener noreferrer'
              >Spanish: <Pdf classProps={`${classProps} w-8 h-8 ml-2`} /></a
            >
          </li>
        </ul>
      </div>
      <ul class='flex gap-x-4'>
        <li><strong class='dark:text-orange-500'>Contact:</strong></li>
        <li>
          <a
            href='mailto:ws.2000.sja@gmail.com'
            target='_blank'
            rel='noopener noreferrer'><Mail classProps={classProps} /></a
          >
        </li>
        <li>
          <a
            href='https://twitter.com/javslvt'
            target='_blank'
            rel='noopener noreferrer'><Twitter classProps={classProps} /></a
          >
        </li>
        <li>
          <a
            href='https://github.com/di4m0nds'
            target='_blank'
            rel='noopener noreferrer'><Github classProps={classProps} /></a
          >
        </li>
        <li>
          <a
            href='https://www.linkedin.com/in/silvestrijavier/'
            target='_blank'
            rel='noopener noreferrer'><Linkedin classProps={classProps} /></a
          >
        </li>
      </ul>
    </div>
  </main>
</section>
